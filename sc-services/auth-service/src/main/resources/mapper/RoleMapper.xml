<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoliu.learn.auth.mapper.RoleMapper">
    <select id="selectRoleByUser" parameterType="com.xiaoliu.learn.auth.domain.User"
            resultType="com.xiaoliu.learn.auth.domain.Role">
        SELECT
            sr.*
        FROM
            auth_user_role sur
            LEFT JOIN auth_role sr ON sur.role_id = sr.id
        WHERE
            sur.user_id = #{id}
    </select>
</mapper>
